<%= form_for([@lead, @note], :remote => true) do |f| %>
  <% if @note.errors.any? %>
    <div class="alert alert-block alert-error">
      <h4>Woops! There was a problem:</h4>
      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.text_area :body, :rows => 3, :class => 'input-xxlarge', :id => 'new_note_body' %><br />
  <%= f.submit "Add Note", :class => "btn btn-small" %>
  <%= link_to 'Cancel', '#', :id => 'form_cancel' %>
<% end %>
